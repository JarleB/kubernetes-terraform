---
kind: ClusterRole
apiVersion: rbac.authorization.k8s.io/v1alpha1
metadata:
  name: kube-worker
rules:
  - apiGroups: ["*"]
    resources: ["*"]
    verbs: ["*"]
    nonResourceURLs: []
---
kind: ClusterRoleBinding
apiVersion: rbac.authorization.k8s.io/v1alpha1
metadata:
  name: kube-worker
subjects:
{% for host in groups['workers'] %}
  - kind: User
    name: "{{ host }}"
{% endfor %}
roleRef:
  kind: ClusterRole
  name: kube-worker
  apiGroup: rbac.authorization.k8s.io
